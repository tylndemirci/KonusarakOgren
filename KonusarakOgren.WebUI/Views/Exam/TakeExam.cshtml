@model KonusarakOgren.Model.Exam.Response.ExamGetExamResponseModel

<div class="container pt-5">
    <div class="row justify-content-center">
        <h3 class="">@Model.Title</h3>
    </div>
    <div class="row mt-3">
        <p>@Model.Content</p>
    </div>
    @for (int i = 0; i < Model.ExamQuestions.Count; i += 2)
    {
        var idAnswerA = $"Answer{i}A";
        var idAnswerB = $"Answer{i}B";
        var idAnswerC = $"Answer{i}C";
        var idAnswerD = $"Answer{i}D";
        var idAnswerA2 = $"Answer{i + 1}A";
        var idAnswerB2 = $"Answer{i + 1}B";
        var idAnswerC2 = $"Answer{i + 1}C";
        var idAnswerD2 = $"Answer{i + 1}D";
        var Name1 = $"Name{i}A";
        var Name2 = $"Name{i}B";

        
        var DataA= @Model.ExamQuestions[i].Answer == "A";
        var DataB= @Model.ExamQuestions[i].Answer == "B";
        var DataC= @Model.ExamQuestions[i].Answer == "C";
        var DataD= @Model.ExamQuestions[i].Answer == "D";
        var DataA2= @Model.ExamQuestions[i+1].Answer == "A";
        var DataB2= @Model.ExamQuestions[i+1].Answer == "B";
        var DataC2= @Model.ExamQuestions[i+1].Answer == "C";
        var DataD2= @Model.ExamQuestions[i+1].Answer == "D";
        
        
        
        
        <div class="row mt-4">
            <div class="col pr-5 pl-0">
                <p>@(i + 1)) @Model.ExamQuestions[i].Question</p>
                <ul class="list-unstyled">
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i)input" type="radio" name="@Name1" id="@idAnswerA" value="A" style="display: none">
                            <label class="form-check-label border border-dark color@(i) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerA" style="width: 100%" data-isTrue="@DataA">
                                A) @Model.ExamQuestions[i].OptionA
                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i)input" type="radio" name="@Name1" id="@idAnswerB" value="B" style="display: none">
                            <label class="form-check-label border border-dark color@(i) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerB" style="width: 100%" data-isTrue="@DataB">
                                B) @Model.ExamQuestions[i].OptionB
                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i + 1)input" type="radio" name="@Name1" id="@idAnswerC" value="C" style="display: none">
                            <label class="form-check-label border border-dark color@(i) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerC" style="width: 100%" data-isTrue="@DataC">
                                C) @Model.ExamQuestions[i].OptionC
                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i)input" type="radio" name="@Name1" id="@idAnswerD" value="D" style="display: none">
                            <label class="form-check-label border border-dark color@(i) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerD" style="width: 100%" data-isTrue="@DataD">
                                D) @Model.ExamQuestions[i].OptionD
                            </label>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col pr-0 pl-5">
                <p>@(i + 2)) @Model.ExamQuestions[i + 1].Question</p>
                <ul class="list-unstyled ">
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(+1)input" type="radio" name="@Name2" id="@idAnswerA2" value="A" style="display: none">
                            <label class="form-check-label border border-dark color@(i + 1) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerA2" style="width: 100%" data-isTrue="@DataA2">
                                A) @Model.ExamQuestions[i + 1].OptionA

                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i + 1)input" type="radio" name="@Name2" id="@idAnswerB2" value="B" style="display: none">
                            <label class="form-check-label border border-dark color@(i + 1) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerB2" style="width: 100%" data-isTrue="@DataB2">
                                B) @Model.ExamQuestions[i + 1].OptionB
                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i + 1)input" type="radio" name="@Name2" id="@idAnswerC2" value="C" style="display: none">
                            <label class="form-check-label border border-dark color@(i + 1) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerC2" style="width: 100%" data-isTrue="@DataC2">
                                C) @Model.ExamQuestions[i + 1].OptionC
                            </label>
                        </div>
                    </li>
                    <li>
                        <div class="form-check p-0">
                            <input class="form-check-input color@(i + 1)input" type="radio" name="@Name2" id="@idAnswerD2" value="D" style="display: none">
                            <label class="form-check-label border border-dark color@(i + 1) pl-4 pr-4 pt-1 pb-1 mb-1" for="@idAnswerD2" style="width: 100%" data-isTrue="@DataD2">
                                D) @Model.ExamQuestions[i + 1].OptionD
                            </label>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }


</div>
<div class="row pb-5 pt-5">
    <div class="col-5"></div>
    <div class="col-2">
        <button class="btn btn-dark  btn-lg btn-block pt-4 pb-4">SINAVI TAMAMLA</button>
    </div>
    <div class="col-5"></div>
</div>

@section Scripts
{
    <script src="~/js/takeExam.js"> 
  
    </script>
    <script >takeExam()</script>

}